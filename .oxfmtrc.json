{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": true,
  "singleQuote": false,
  "printWidth": 80,
  "jsxSingleQuote": false,
  "arrowParens": "always",
  "trailingComma": "all",
  "quoteProps": "consistent",
  "experimentalSortPackageJson": true,
  "ignorePatterns": ["pnpm-lock.yaml", "CHANGELOG.md"]
}
